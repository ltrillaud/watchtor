{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
    },
    // Controls after how many characters the editor will wrap to the next line. Setting this to 0 turns on viewport
    // width wrapping (word wrapping). Setting this to -1 forces the editor to never wrap.
    "editor.wrappingColumn": -1,
    // Columns at which to show vertical rulers
    "editor.rulers": [
        120
    ],
    // Turns auto fix on save on or off.
    "tslint.autoFixOnSave": true,
}